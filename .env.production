# PowerBI Chat Production Environment Configuration
# Copy this file to .env for production deployment

# Clerk Authentication (Required for production)
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your-live-publishable-key-here
CLERK_SECRET_KEY=sk_live_your-live-secret-key-here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Power BI Configuration (Required)
# Azure AD Application Registration
POWERBI_CLIENT_ID=your-azure-app-client-id
POWERBI_CLIENT_SECRET=your-azure-app-client-secret
POWERBI_TENANT_ID=your-azure-tenant-id

# PowerBI Resources
POWERBI_SCOPE=https://analysis.windows.net/powerbi/api/.default
POWERBI_REPORT_ID=your-powerbi-report-id
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id
POWERBI_DATASET_ID=your-powerbi-dataset-id
POWERBI_EMBED_URL=https://app.powerbi.com/reportEmbed

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Production Settings
NODE_ENV=production
PORT=3000
BACKEND_PORT=8000